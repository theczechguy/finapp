<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Fin App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/InvestmentTracker.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Fin App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @{
                        var path = ViewContext.HttpContext.Request.Path;
                        if (path.StartsWithSegments("/Expenses"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Expenses/Index">Expenses</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Expenses/FamilyMembers">Family Members</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Expenses/ExpenseCategories">Categories</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Expenses/IncomeSources">Income Sources</a>
                            </li>
                        }
                        else if (path.StartsWithSegments("/Investments") || path.StartsWithSegments("/Values") || path.StartsWithSegments("/Portfolio"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Portfolio/Index">Portfolio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Investments/List">Investments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Values/Index">Values</a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container flex-grow-1">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - Fin App
        <span class="float-end keyboard-shortcut-indicator" style="font-size: 0.8rem; opacity: 0.7;">
            Press <kbd style="font-size: 0.7rem;">?</kbd> for shortcuts
        </span>
    </div>
</footer>

<!-- Global Confirm Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Please Confirm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="confirmModalMessage">Are you sure?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmModalOk">Delete</button>
            </div>
        </div>
    </div>
    </div>

<!-- Keyboard Shortcuts Help Overlay -->
<div id="keyboardShortcutsOverlay" class="keyboard-shortcuts-overlay" style="display: none;" onclick="hideKeyboardShortcuts()">
    <div class="keyboard-shortcuts-modal" onclick="event.stopPropagation()">
        <div class="keyboard-shortcuts-header">
            <h5 class="keyboard-shortcuts-title">Keyboard Shortcuts</h5>
            <button type="button" class="keyboard-shortcuts-close" onclick="hideKeyboardShortcuts()">&times;</button>
        </div>
        <div class="keyboard-shortcuts-body">
            <div class="keyboard-shortcuts-section">
                <h6 class="keyboard-shortcuts-section-title">Navigation</h6>
                <div class="keyboard-shortcuts-list">
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">H</span>
                        <span class="keyboard-shortcut-description">Go to Home/Dashboard</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">E</span>
                        <span class="keyboard-shortcut-description">Go to Expenses</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">I</span>
                        <span class="keyboard-shortcut-description">Go to Investments</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">P</span>
                        <span class="keyboard-shortcut-description">Go to Portfolio</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">V</span>
                        <span class="keyboard-shortcut-description">Go to Values</span>
                    </div>
                </div>
            </div>

            <div class="keyboard-shortcuts-section">
                <h6 class="keyboard-shortcuts-section-title">Expense Management</h6>
                <div class="keyboard-shortcuts-list">
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">A</span>
                        <span class="keyboard-shortcut-description">Add Regular Expense</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">Q</span>
                        <span class="keyboard-shortcut-description">Quick Add Irregular Expense</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">O</span>
                        <span class="keyboard-shortcut-description">Add One-Time Income</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">[</span>
                        <span class="keyboard-shortcut-description">Previous Month</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">]</span>
                        <span class="keyboard-shortcut-description">Next Month</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">U</span>
                        <span class="keyboard-shortcut-description">Update Income</span>
                    </div>
                </div>
            </div>

            <div class="keyboard-shortcuts-section">
                <h6 class="keyboard-shortcuts-section-title">General</h6>
                <div class="keyboard-shortcuts-list">
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">?</span>
                        <span class="keyboard-shortcut-description">Show this help</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">Esc</span>
                        <span class="keyboard-shortcut-description">Close modal/cancel</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">Enter</span>
                        <span class="keyboard-shortcut-description">Submit form</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="keyboard-shortcuts-footer">
            Press <kbd>Esc</kbd> or click outside to close
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>