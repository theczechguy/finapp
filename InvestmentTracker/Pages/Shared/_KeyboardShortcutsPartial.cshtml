<div id="keyboardShortcutsOverlay" class="keyboard-shortcuts-overlay" style="display: none;" onclick="hideKeyboardShortcuts()">
    <div class="keyboard-shortcuts-modal" onclick="event.stopPropagation()">
        <div class="keyboard-shortcuts-header">
            <h5 class="keyboard-shortcuts-title">Keyboard Shortcuts</h5>
            <button type="button" class="keyboard-shortcuts-close" onclick="hideKeyboardShortcuts()">&times;</button>
        </div>
        <div class="keyboard-shortcuts-body">
            <div class="keyboard-shortcuts-section">
                <h6 class="keyboard-shortcuts-section-title">Navigation</h6>
                <div class="keyboard-shortcuts-list">
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">H</span>
                        <span class="keyboard-shortcut-description">Go to Home/Dashboard</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">E</span>
                        <span class="keyboard-shortcut-description">Go to Expenses</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">I</span>
                        <span class="keyboard-shortcut-description">Go to Investments</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">P</span>
                        <span class="keyboard-shortcut-description">Go to Portfolio</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">V</span>
                        <span class="keyboard-shortcut-description">Go to Values</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">←</span>
                        <span class="keyboard-shortcut-description">Previous Month (also P)</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">→</span>
                        <span class="keyboard-shortcut-description">Next Month (also N)</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">C</span>
                        <span class="keyboard-shortcut-description">Current Month (also T, Home)</span>
                    </div>
                </div>
            </div>

            <div class="keyboard-shortcuts-section">
                <h6 class="keyboard-shortcuts-section-title">Expense Management</h6>
                <div class="keyboard-shortcuts-list">
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">A</span>
                        <span class="keyboard-shortcut-description">Add Expense (Dashboard & Recurring)</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">Q</span>
                        <span class="keyboard-shortcut-description">Quick Add Irregular Expense</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">O</span>
                        <span class="keyboard-shortcut-description">Add One-Time Income</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">U</span>
                        <span class="keyboard-shortcut-description">Update Income</span>
                    </div>
                </div>
            </div>

            <div class="keyboard-shortcuts-section">
                <h6 class="keyboard-shortcuts-section-title">General</h6>
                <div class="keyboard-shortcuts-list">
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">?</span>
                        <span class="keyboard-shortcut-description">Show this help</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">Esc</span>
                        <span class="keyboard-shortcut-description">Close modal/cancel</span>
                    </div>
                    <div class="keyboard-shortcut-item">
                        <span class="keyboard-shortcut-key">Enter</span>
                        <span class="keyboard-shortcut-description">Submit form</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="keyboard-shortcuts-footer">
            Press <kbd>Esc</kbd> or click outside to close
        </div>
    </div>
</div>