@page
@model InvestmentTracker.Pages.Expenses.ImportProfiles.IndexModel
@{
    ViewData["Title"] = "Import Profiles";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Import Profiles</h1>
        <a asp-page="./Edit" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> New Profile
        </a>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Name</th>
                            <th>Description</th>
                            <th>Last Updated</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var profile in Model.Profiles)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@profile.Name</td>
                                <td>@profile.Description</td>
                                <td>@(profile.UpdatedAt?.ToLocalTime().ToString("g") ?? profile.CreatedAt.ToLocalTime().ToString("g"))</td>
                                <td class="text-end pe-4">
                                    <a asp-page="./Edit" asp-route-id="@profile.Id" class="btn btn-sm btn-outline-secondary me-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (!Model.Profiles.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="bi bi-file-earmark-text display-4 d-block mb-3"></i>
                                    No import profiles found. Create one to get started.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
