@page "{id:int}"
@model InvestmentTracker.Pages.Expenses.ImportProfiles.DeleteModel
@{
    ViewData["Title"] = "Delete Import Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Confirmation</h4>
                </div>
                <div class="card-body">
                    <p class="lead">Are you sure you want to delete this import profile?</p>
                    
                    <div class="alert alert-warning">
                        <strong>@Model.ProfileName</strong>
                        <p class="mb-0 text-muted small">@Model.ProfileDescription</p>
                    </div>

                    <p class="text-danger small">This action cannot be undone.</p>

                    <form method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete Profile</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
