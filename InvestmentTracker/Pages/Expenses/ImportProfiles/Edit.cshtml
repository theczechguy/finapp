@page "{id:int?}"
@model InvestmentTracker.Pages.Expenses.ImportProfiles.EditModel
@{
    ViewData["Title"] = Model.IsNew ? "New Import Profile" : "Edit Import Profile";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Entity.Id" />
                        
                        <div class="mb-3">
                            <label asp-for="Entity.Name" class="form-label">Profile Name</label>
                            <input asp-for="Entity.Name" class="form-control" placeholder="e.g. AirBank" />
                            <span asp-validation-for="Entity.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Entity.Description" class="form-label">Description</label>
                            <textarea asp-for="Entity.Description" class="form-control" rows="2" placeholder="Optional description"></textarea>
                            <span asp-validation-for="Entity.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProfileJson" class="form-label">Configuration (JSON)</label>
                            <div class="form-text mb-2">
                                Define the parser settings, columns, and field mappings.
                            </div>
                            <textarea asp-for="ProfileJson" class="form-control font-monospace" rows="20" spellcheck="false"></textarea>
                            <span asp-validation-for="ProfileJson" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top">
                            @if (!Model.IsNew)
                            {
                                <button type="submit" asp-page-handler="Delete" asp-route-id="@Model.Entity.Id" 
                                        class="btn btn-outline-danger" 
                                        onclick="return confirm('Are you sure you want to delete this profile?');">
                                    <i class="bi bi-trash"></i> Delete Profile
                                </button>
                            }
                            else
                            {
                                <div></div>
                            }
                            
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Profile
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
