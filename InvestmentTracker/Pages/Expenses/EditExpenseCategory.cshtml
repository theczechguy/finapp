@page "{id:int}"
@model InvestmentTracker.Pages.Expenses.EditExpenseCategoryModel
@{
    ViewData["Title"] = "Edit Expense Category";
}

<h2>Edit Expense Category</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Category Details
            </div>
            <div class="card-body">
                <form method="post" data-loading="Updating category...">
                    <div class="mb-3">
                        <label asp-for="Category.Name" class="form-label"></label>
                        <input asp-for="Category.Name" class="form-control" />
                        <span asp-validation-for="Category.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-check">
                        <input asp-for="Category.IsInternalTransfer" class="form-check-input" />
                        <label asp-for="Category.IsInternalTransfer" class="form-check-label">Is Internal Transfer</label>
                        <div class="form-text">Expenses in this category will be excluded from spending totals.</div>
                    </div>
                    <button type="submit" class="btn btn-primary" title="Update Category" aria-label="Update Category">
                        <i class="bi bi-save"></i>
                        <span class="d-none d-sm-inline ms-1">Update Category</span>
                    </button>
                    <a asp-page="./ExpenseCategories" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
