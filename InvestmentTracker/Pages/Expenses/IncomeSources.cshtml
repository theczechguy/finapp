@page
@model InvestmentTracker.Pages.Expenses.IncomeSourcesModel
@using InvestmentTracker.Models
@{
    ViewData["Title"] = "Manage Income Sources";
}

<h2>Manage Income Sources</h2>

<div class="row">
    <div class="col-md-8">
    <div class="table-responsive">
    <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Expected Amount</th>
                    <th>Currency</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var source in Model.IncomeSources)
                {
                    <tr>
                        <td>@source.Name</td>
                        <td>@source.ExpectedAmount.ToString("N2")</td>
                        <td>@source.Currency</td>
                        <td>
                            <div class="d-flex flex-wrap align-items-center gap-2">
                                <a asp-page="./EditIncomeSource" asp-route-id="@source.Id" class="btn btn-sm btn-secondary" title="Edit" aria-label="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@source.Id" class="d-inline" data-confirm="Delete this income source? This will also remove all associated monthly income records." data-loading="Deleting income source...">
                                    <button type="submit" class="btn btn-sm btn-danger" title="Delete" aria-label="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
    </table>
    </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Add New Source
            </div>
            <div class="card-body">
                <form method="post" data-loading="Adding income source...">
                    <div class="mb-3">
                        <label asp-for="NewIncomeSource.Name" class="form-label"></label>
                        <input asp-for="NewIncomeSource.Name" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewIncomeSource.ExpectedAmount" class="form-label"></label>
                        <input asp-for="NewIncomeSource.ExpectedAmount" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewIncomeSource.Currency" class="form-label"></label>
                        <select asp-for="NewIncomeSource.Currency" asp-items="Html.GetEnumSelectList<Currency>()" class="form-control"></select>
                    </div>
                    <button type="submit" class="btn btn-primary" title="Add Source" aria-label="Add Source">
                        <i class="bi bi-plus-lg"></i>
                        <span class="d-none d-sm-inline ms-1">Add Source</span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
