@page "{id:int}"
@model InvestmentTracker.Pages.Expenses.EditIncomeSourceModel
@using InvestmentTracker.Models
@{
    ViewData["Title"] = "Edit Income Source";
}

<h2>Edit Income Source</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="IncomeSource.Id" />
            <div class="mb-3">
                <label asp-for="IncomeSource.Name" class="form-label"></label>
                <input asp-for="IncomeSource.Name" class="form-control" />
                <span asp-validation-for="IncomeSource.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="IncomeSource.ExpectedAmount" class="form-label"></label>
                <input asp-for="IncomeSource.ExpectedAmount" class="form-control" />
                <span asp-validation-for="IncomeSource.ExpectedAmount" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="IncomeSource.Currency" class="form-label"></label>
                <select asp-for="IncomeSource.Currency" asp-items="Html.GetEnumSelectList<Currency>()" class="form-control"></select>
                <span asp-validation-for="IncomeSource.Currency" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-page="./IncomeSources" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
