@model InvestmentTracker.Pages.Investments.CreateModel
@using InvestmentTracker.Models

<h2>Create Investment</h2>

<form method="post" class="mt-3" data-loading="Creating investment...">
    <div class="mb-3">
        <label asp-for="Investment.Name" class="form-label"></label>
        <input asp-for="Investment.Name" class="form-control" />
        <span asp-validation-for="Investment.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Investment.Provider" class="form-label"></label>
        <input asp-for="Investment.Provider" class="form-control" id="provider-input" autocomplete="off" />
        <span asp-validation-for="Investment.Provider" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Investment.Type" class="form-label"></label>
        <select asp-for="Investment.Type" class="form-select" asp-items="Html.GetEnumSelectList<InvestmentType>()"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Investment.Category" class="form-label"></label>
        <select asp-for="Investment.Category" class="form-select" asp-items="Html.GetEnumSelectList<InvestmentCategory>()"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Investment.Currency" class="form-label"></label>
        <select asp-for="Investment.Currency" class="form-select" asp-items="Html.GetEnumSelectList<Currency>()"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Investment.FamilyMemberId" class="form-label">Owner</label>
        <select asp-for="Investment.FamilyMemberId" class="form-select" asp-items="Model.FamilyMembers">
            <option value="">Family / Joint</option>
        </select>
        <div class="form-text">Select a family member if this investment belongs to a specific person, or leave as "Family / Joint".</div>
    </div>

    <div class="mb-3">
        <label asp-for="Investment.MaturityDate" class="form-label">Maturity Date</label>
        <input asp-for="Investment.MaturityDate" type="date" class="form-control" />
        <div class="form-text">Optional. The date when this investment matures or ends.</div>
        <span asp-validation-for="Investment.MaturityDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Investment.ChargeAmount" class="form-label">One-time Charge</label>
        <input name="Investment.ChargeAmount" type="text" inputmode="decimal" class="form-control" placeholder="Leave empty if no charge" autocomplete="off" />
        <div class="form-text">A single charge deducted from invested total. Leave empty if none.</div>
        <span asp-validation-for="Investment.ChargeAmount" class="text-danger"></span>
    </div>

    <div class="alert alert-info" role="alert">
        <i class="bi bi-info-circle me-2"></i>
        <strong>Next Step:</strong> After creating this investment, you'll be taken to the edit page where you can configure contribution schedules, set up recurring contributions, and add initial values.
    </div>

    <div class="text-muted small mb-3">
        <i class="bi bi-keyboard me-1"></i>Tip: Press <kbd>Enter</kbd> in any field to save, or <kbd>Esc</kbd> to cancel and return to investments list
    </div>

    <button type="submit" class="btn btn-primary" title="Save" aria-label="Save">
        <i class="bi bi-save"></i>
        <span class="d-none d-sm-inline ms-1">Save</span>
    </button>
    <a class="btn btn-secondary" asp-page="./List">Cancel</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <!-- Include bootstrap-3-typeahead from CDN and initialize on the provider input -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-3-typeahead/4.0.2/bootstrap3-typeahead.min.js"></script>
    <script>
        (function ($) {
            $(function () {
                var $input = $('#provider-input');
                var providersCache = null;

                function ensureProviders() {
                    if (providersCache) return $.Deferred().resolve(providersCache).promise();
                    return $.get('/api/providers').then(function (data) {
                        providersCache = Array.isArray(data) ? data : [];
                        return providersCache;
                    }).catch(function () { providersCache = []; return providersCache; });
                }

                var MAX_ITEMS = 5;
                $input.typeahead({
                    source: function (query, process) {
                        ensureProviders().then(function (list) {
                            var results;
                            if (!query || !query.trim()) {
                                // no query -> show top MAX_ITEMS
                                results = list.slice(0, MAX_ITEMS);
                                return process(results);
                            }
                            var q = query.toLowerCase();
                            var filtered = list.filter(function (it) { return it.toLowerCase().indexOf(q) !== -1; });
                            results = filtered.slice(0, MAX_ITEMS);
                            return process(results);
                        }).catch(function () { process([]); });
                    },
                    items: MAX_ITEMS,
                    minLength: 0,
                    afterSelect: function (item) { $input.val(item); }
                });

                // Show full list on focus if not typing yet
                $input.on('focus', function () {
                    ensureProviders().then(function () { $input.typeahead('lookup'); });
                });
            });
        })(jQuery);
    </script>
}
