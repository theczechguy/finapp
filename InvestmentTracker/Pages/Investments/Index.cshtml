@page
@model InvestmentTracker.Pages.Investments.IndexModel
@using InvestmentTracker.Models

<h2>Investments</h2>
<p>
    <a class="btn btn-primary" asp-page="Create">Add Investment</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Recurring Amount</th>
            <th>Latest Value</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var i in Model.Items)
{
    var latest = i.Values.OrderByDescending(v => v.AsOf).FirstOrDefault();
    <tr>
        <td>@i.Name</td>
        <td>@i.Type</td>
        <td>@(i.RecurringAmount?.ToString("C"))</td>
        <td>@(latest is null ? "-" : latest.Value.ToString("C") + " (" + latest.AsOf.ToShortDateString() + ")")</td>
        <td>
            <a class="btn btn-sm btn-outline-secondary" asp-page="Values" asp-route-id="@i.Id">Values</a>
        </td>
    </tr>
}
    </tbody>
</table>
