@page
@using System.Globalization
@using InvestmentTracker.Models
@model InvestmentTracker.Pages.Investments.ListModel

<h2>Investments</h2>
<p>
    <a class="btn btn-primary" asp-page="Create" title="Add Investment" aria-label="Add Investment">
        <i class="bi bi-plus-lg"></i>
        <span class="d-none d-sm-inline ms-1">Add Investment</span>
    </a>
</p>
<div class="text-muted small mb-3">
    <i class="bi bi-keyboard me-1"></i>Tip: Press <kbd>C</kbd> to create new investment, <kbd>?</kbd> for all shortcuts
</div>
<div class="table-responsive">
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Provider</th>
            <th>Type</th>
            <th>Category</th>
            <th>Currency</th>
            <th>One-time Charge</th>
            <th>Latest Value</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var i in Model.Investments)
{
    var culture = CultureInfo.CreateSpecificCulture(i.Currency.ToCultureCode());
    <tr>
        <td>@i.Name</td>
        <td>@(string.IsNullOrWhiteSpace(i.Provider) ? "-" : i.Provider)</td>
        <td>@i.Type</td>
        <td>@i.Category</td>
        <td>@i.Currency</td>
        <td>@(i.ChargeAmount == 0 ? "-" : i.ChargeAmount.ToString("C", culture))</td>
        <td>
            @{
                var latest = Model.LatestValues.ContainsKey(i.Id) ? Model.LatestValues[i.Id] : null;
                if (latest != null)
                {
                    var valueCulture = CultureInfo.CreateSpecificCulture(i.Currency.ToCultureCode());
                    <text>@latest.Value.ToString("C", valueCulture)</text>
                }
                else
                {
                    <text>-</text>
                }
            }
        </td>
        <td>
            <div class="d-flex flex-wrap align-items-center gap-2">
                <a class="btn btn-sm btn-secondary" asp-page="Values" asp-route-id="@i.Id" title="Values" aria-label="Values">
                    <i class="bi bi-graph-up"></i>
                </a>
                <a class="btn btn-sm btn-primary" asp-page="Edit" asp-route-id="@i.Id" title="Edit" aria-label="Edit">
                    <i class="bi bi-pencil"></i>
                </a>
                <form method="post" asp-page-handler="Delete" asp-route-id="@i.Id" class="d-inline" data-confirm="Delete this investment? All its values and schedules will be removed." data-loading="Deleting investment...">
                    <button type="submit" class="btn btn-sm btn-danger" title="Delete" aria-label="Delete">
                        <i class="bi bi-trash"></i>
                    </button>
                </form>
            </div>
        </td>
    </tr>
}
    </tbody>
</table>
</div>
