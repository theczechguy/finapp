@page
@using System.Globalization
@using InvestmentTracker.Models
@model InvestmentTracker.Pages.Investments.ListModel

<h2>Investments</h2>
<p>
    <a class="btn btn-primary" asp-page="Create">Add Investment</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Provider</th>
            <th>Type</th>
            <th>Currency</th>
            <th>One-time Charge</th>
            <th>Latest Value</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var i in Model.Investments)
{
    var latest = i.Values.OrderByDescending(v => v.AsOf).FirstOrDefault();
    var culture = CultureInfo.CreateSpecificCulture(i.Currency.ToCultureCode());
    <tr>
        <td>@i.Name</td>
        <td>@(string.IsNullOrWhiteSpace(i.Provider) ? "-" : i.Provider)</td>
        <td>@i.Type</td>
        <td>@i.Currency</td>
        <td>@(i.ChargeAmount == 0 ? "-" : i.ChargeAmount.ToString("C", culture))</td>
        <td>@(latest is null ? "-" : latest.Value.ToString("C", culture) + " (" + latest.AsOf.ToShortDateString() + ")")</td>
        <td>
            <a class="btn btn-sm btn-outline-secondary" asp-page="Values" asp-route-id="@i.Id">Values</a>
            <a class="btn btn-sm btn-outline-primary" asp-page="Edit" asp-route-id="@i.Id">Edit</a>
            <form method="post" asp-page-handler="Delete" asp-route-id="@i.Id" class="d-inline" data-confirm="Delete this investment? All its values and schedules will be removed.">
                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
            </form>
        </td>
    </tr>
}
    </tbody>
</table>
