@page
@model InvestmentTracker.Pages.Values.IndexModel

<h2>All Recorded Values</h2>
<p>
    <a class="btn btn-secondary" asp-page="/Investments/Index">Back to Investments</a>
</p>
<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>
                <a asp-route-sort="Provider" asp-route-dir="@(Model.Sort=="Provider" && Model.Dir=="asc" ? "desc" : "asc")">Provider</a>
            </th>
            <th>
                <a asp-route-sort="Investment" asp-route-dir="@(Model.Sort=="Investment" && Model.Dir=="asc" ? "desc" : "asc")">Investment</a>
            </th>
            <th>
                <a asp-route-sort="AsOf" asp-route-dir="@(Model.Sort=="AsOf" && Model.Dir=="asc" ? "desc" : "asc")">Date</a>
            </th>
            <th>
                <a asp-route-sort="Value" asp-route-dir="@(Model.Sort=="Value" && Model.Dir=="asc" ? "desc" : "asc")">Value</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var r in Model.Items)
    {
        <tr>
            <td>@(string.IsNullOrWhiteSpace(r.Provider) ? "-" : r.Provider)</td>
            <td>
                <a asp-page="/Investments/Values" asp-route-id="@r.InvestmentId">@r.InvestmentName</a>
            </td>
            <td>@r.AsOf.ToShortDateString()</td>
            <td>@r.Value.ToString("C")</td>
            <td>
                <form method="post" asp-page-handler="Delete" asp-route-id="@r.Id">
                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
